{
  "manifest_version": 3,
  "name": "WebToolKit",
  "version": "1.0.0",
  "description": "catch main content from web pages to merge and copy later",

  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "tabs"
  ],

  "host_permissions": ["<all_urls>"],

  "action": {
    "default_popup": "popup.html",
    "default_title": "WebToolKit",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
